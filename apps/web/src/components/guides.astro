---
import { getCollection } from "astro:content";
import Container from "./container.astro";

const guides = await getCollection("guides");

const sortedGuides = guides.sort((a, b) => b.data.date.getTime() - a.data.date.getTime());
---

<Container>
  <h2 class="text-2xl md:text-3xl lg:text-4xl font-bold mb-2">Guides</h2>
  <p class="text-neutral-400 md:text-lg lg:text-xl mb-5">Learn how to use Hype with your favorite framework.</p>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10">
  {
    sortedGuides.map((guide) => (
      <a
        href={`/guides/${guide.id}`}
        class=" flex flex-col gap-1"
      >
        <span class="text-sm text-neutral-400">{guide.data.date.toLocaleDateString()}</span>
        <p class="font-medium">
          {guide.data.title}
        </p>
        <p class="text-sm text-neutral-400">{guide.data.description}</p>
      </a>
    ))
  }
  </div>
</Container>
